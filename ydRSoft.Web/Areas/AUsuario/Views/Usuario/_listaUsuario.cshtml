@using ydRSoft.Modelo
@model List<UsuarioModel>

@{ 

    List<UsuarioModel> mLista = Model != null ? Model : new List<UsuarioModel>();
    int Index = 0;

}

<table class="table">
    <thead>
        <tr>
            <th width="1"> # </th>
            <th>Nombre</th>
            <th width="20%">DNI</th>
            <th width="30%">CORREO</th>
            <th width="1"></th>
        </tr>
    </thead>
    <tbody>
        @if (mLista.Count > 0)
        {
            foreach (var item in mLista)
            {
                Index++;

                <tr class="text-navy">
                    <td hidden>@item.Id</td>
                    <td class="text-default">@Index.ToString().PadLeft(2, '0')</td>
                    <td>@item.Nombres</td>
                    <td>@item.Dni</td>
                    <td>@item.Correo</td>
                    @if (item.IdSexo == ydRSoft.Util.Variables.HOMBRE)
                    {
                        <td><i class="fa fa-male text-navy"></i></td>
                    }
                    else
                    {
                        <td><i class="fa fa-female text-danger"></i></td>
                    }
                </tr>
            }
        }

    </tbody>
    <tfoot>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>

        </tr>
    </tfoot>
</table>
