@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Texto Curvado</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <!-- SVG con un camino de texto curvo -->
    <svg width="500" height="500" viewBox="0 0 500 500">
        <defs>
            <!-- Define el círculo para el texto -->
            <path id="circlePath" d="M 250, 250 m -150, 0 a 150,150 0 1,1 300,0 a 150,150 0 1,1 -300,0" />
        </defs>
        <!-- Texto alineado al camino circular -->
        <text font-size="20" fill="white">
            <textPath href="#circlePath" startOffset="50%">
                ¡Texto siguiendo una circunferencia!
            </textPath>
        </text>
    </svg>

    <!-- Incluye GSAP desde CDN -->
    <script src="~/Content/ydrsoft/gsap.min.js"></script>

</body>
</html>

<script>
    gsap.to("textPath", {
        duration: 5,
        startOffset: '100%',
        repeat: -1,
        ease: "power1.inOut",
        yoyo: true
    });
</script>
