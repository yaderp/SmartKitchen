<script id="_Dibujar_Corona_">
    // Obtener el canvas y el contexto
    const canvas = document.getElementById('canvasCorona');
    const ctx = canvas.getContext('2d');
    const anchoCorona = 50;
    const Tipoletra = '"Lucida Console"';
    const letraInfo = '"Lucida Console"';
    const tamNombre = 30;
    const tamInfo = 20;
    const tamInfoN = 24;
    const tamInfoV = 32;
    const CantInfo = 4;
    // Ajustar el tamaño del canvas al tamaño de la ventana
    function ajustarCanvas() {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        //dibujarMolecula(300,300);
    }

    async function dibujarProd(productos) {
        try {
            console.log("dibujar prod");
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            productos.forEach(producto => {
                mostrarProductos(producto); 
            });

        } catch (error) {
            console.error(error);
        }

    }

    function MostrarMenu(productos) {

        const vistaMenu = document.getElementById("vistaProd");
        vistaMenu.innerHTML = ""; // Limpiar contenido previo

        
        // Iterar sobre la lista de productos y mostrarlos
        productos.forEach((producto, index) => {
            vistaMenu.innerHTML += `<div> <i class="fa fa-hand-o-right texto-icon-VerdeF"></i> ${'1 '} ${producto.Nombre}</div>`;
        });
    }

    function mostrarProductos(producto) {

        let nombre = producto.Nombre;
        let posX = producto.PosX;
        let posY = producto.PosY;
        let radio = producto.Radio;
        
        const listaValor = [];

        listaValor.push(producto.Calorias);
        listaValor.push(producto.Proteinas);
        listaValor.push(producto.Colesterol);
        listaValor.push(producto.Carbohidratos);
        listaValor.push(producto.Fibra);
        listaValor.push(producto.Azucares);
        listaValor.push(producto.Sodio);
        listaValor.push(producto.Calcio);
        listaValor.push(producto.Grasa);

        dibujarCorona(posX, posY, radio);
        dibujarTexto(posX, posY, radio);
        dibujarNombre(posX, posY, radio, nombre);
        dibujarLinea(posX, posY, radio, listaValor);
    }

    // Dibujar la corona
    function dibujarCorona(x, y, radioExterior) {
        const radioInterior = radioExterior - anchoCorona;
        console.log("Radio " + radioExterior);
        // Dibujar círculo exterior
        ctx.beginPath();
        ctx.arc(x, y, radioExterior, 0, Math.PI * 2, false);
        ctx.fillStyle = 'rgb(64, 150, 84)';
        ctx.fill();

        // Dibujar círculo interior (eliminar el centro)
        ctx.globalCompositeOperation = 'destination-out';
        ctx.beginPath();
        ctx.arc(x, y, radioInterior, 0, Math.PI * 2, false);
        ctx.fill();

        // Restaurar el modo de dibujo
        ctx.globalCompositeOperation = 'source-over';

    }

    function dibujarNombre(x, y, radioExterior, texto) {
        const radioInterior = radioExterior - anchoCorona;

        ctx.font = `${tamNombre}px ${Tipoletra}`;
        ctx.fillStyle = 'white';
        const anguloInicio = 1; 
        const anguloPaso = 0.25 * 100 / radioExterior;

        const radioTexto = radioInterior + 35;

        const index = texto.length - 1;
        let aux = 0;

        for (let i = index; i >= 0; i--) {
            const angulo = anguloInicio + aux * anguloPaso;
            const letraX = x + (radioTexto * Math.cos(angulo));
            const letraY = y + (radioTexto * Math.sin(angulo));

            ctx.save();
            ctx.translate(letraX, letraY);
            ctx.rotate(angulo + 4.65);
            ctx.fillText(texto[i], 0, 0);
            ctx.restore();
            aux++;
        }
    }

    function dibujarTexto(x, y, radioExterior) {
        const texto = "Tamaño de porcion 100g";
        const radioInterior = radioExterior - anchoCorona;
        ctx.font = `${tamInfo}px ${Tipoletra}`;
        ctx.fillStyle = 'white';

        const anguloInicio = 5;
        const radioTexto = radioInterior + 20;

        const radioBase = 50; // Esto puede ser un valor de referencia para la separación constante
        const totalLetras = texto.length;

        const anguloPorLetra = (Math.PI * 2) / totalLetras * (radioBase / radioTexto);

        const index = totalLetras - 1;
        let aux = 0;

        for (let i = totalLetras - 1; i >= 0; i--) {
            const anguloLetra = anguloInicio - (anguloPorLetra * i);
            console.log("angle Letra -> " + anguloLetra);
            // Calcular la posición de cada letra
            const xLetra = x + Math.cos(anguloLetra) * radioTexto;
            const yLetra = y + Math.sin(anguloLetra) * radioTexto;

            // Rotar el contexto para alinear la letra con la circunferencia
            ctx.save();
            ctx.translate(xLetra, yLetra);
            ctx.rotate(anguloLetra + Math.PI / 2);  // Ajustar la rotación para que sigan la curva

            // Dibujar la letra
            ctx.fillText(texto[totalLetras - i - 1], 0, 0);

            // Restaurar el contexto
            ctx.restore();
        }
    }

    function dibujarTexto_test(x, y, radioExterior) {
        const texto = "Tamaño de porcion 100g";
        const radioInterior = radioExterior - anchoCorona;
        // Configuración de la fuente
        ctx.font = `${tamInfo}px ${Tipoletra}`;
        ctx.fillStyle = 'white'; // Color del texto

        const anguloInicio = 5 // Comienza desde el lado izquierdo de la corona
        const anguloPaso = 0.13 * 100 / radioExterior;

        // Ajustar el radio donde se dibuja el texto
        const radioTexto = radioInterior + 20; // Ajustar el radio para el texto

        const index = texto.length - 1;
        // Dibujar texto a lo largo de la curva en forma de "U"
        let aux = 0;
        for (let i = index; i >= 0; i--) {
            const angulo = anguloInicio - aux * anguloPaso; // Ángulo para cada letra
            const letraX = x + (radioTexto * Math.cos(angulo)); // Coordenada x
            const letraY = y + (radioTexto * Math.sin(angulo)); // Coordenada y
            //alert("texto -> " + texto[i] + " Angulo -> " + angulo);
            // Rotar el texto para que siga la curva
            ctx.save();
            ctx.translate(letraX, letraY);
            ctx.rotate(angulo + Math.PI / 2); // Alinea el texto hacia arriba
            ctx.fillText(texto[i], 0, 0); // Dibujar letra
            ctx.restore();
            aux++;
        }
    }

    function dibujarLinea(x, y, radius, listValor) {

        console.log("data -> " + listValor);
        const centerX = x;
        const centerY = y;
        const anguloInicio = 5.4;
        const anguloPaso = 0.39;

        const listaInfo = ["Calorias", "Proteinas", "Colesterol", "Carbohidratos", "Nutrientes"]
        
        for (let i = 0; i < CantInfo; i++) {
            ctx.fillStyle = 'yellow';           
            const angle = anguloInicio + i  * anguloPaso; 

            console.log("Angulo : "+angle);

            const x1 = centerX + (radius - 10) * Math.cos(angle);
            const y1 = centerY + (radius - 10) * Math.sin(angle);
            
            const x2 = centerX + (radius + 20) * Math.cos(angle);
            const y2 = centerY + (radius + 20) * Math.sin(angle);

            ctx.beginPath();
            ctx.moveTo(x1, y1); 
            ctx.lineTo(x2, y2);
            ctx.lineWidth = 3;
            ctx.strokeStyle = 'yellow';
            ctx.stroke();

            //ctx.beginPath();
            ctx.arc(x1, y1, 4, 0, Math.PI * 2); 
            ctx.fill();

            //ctx.beginPath();
            ctx.arc(x2, y2, 3, 0, Math.PI * 2); 
            ctx.fill();

            const textoValor = listValor[i];
            const textoNombre = listaInfo[i];
            console.log("Valor : " + textoValor);
            ctx.fillStyle = 'white';
            ctx.font = `bold ${tamInfoV}px ${letraInfo}`;
            ctx.fillText(textoValor, x2 + 10, y2);

            ctx.fillStyle = 'gray';
            ctx.font = `bold ${tamInfoN}px ${letraInfo}`;
            ctx.fillText(textoNombre, x2 + 10, y2 + 25);
        }

        let angulo = anguloInicio + 4 * anguloPaso;
        const xn2 = centerX + (radius + 20) * Math.cos(angulo); // Aumenta la longitud del rayo
        const yn2 = centerY + (radius + 20) * Math.sin(angulo);

        ctx.fillStyle = 'white';
        ctx.font = `bold ${tamInfoN + 5}px ${letraInfo}`;
        ctx.fillText("Nutrientes", xn2 + 10, yn2);

        ctx.font = `bold ${tamInfoV}px ${letraInfo}`;
        ctx.fillText(listValor[CantInfo], xn2 + 10, yn2 + 30);
        ctx.fillText(listValor[CantInfo + 1], xn2 + 10, yn2 + 80);

        ctx.fillStyle = 'rgb(108, 108, 108)';
        ctx.font = `bold ${tamInfoN}px ${letraInfo}`;
        ctx.fillText("Azucar", xn2 + 10, yn2 + 50);
        ctx.fillText("Grasa", xn2 + 10, yn2 + 100);

        dibujarMolecula(xn2 - 40, yn2);

        @*const img = new Image();
        img.src = '@Url.Content("~/Content/Imagenes/molecula.png")';

        img.onload = function () {
            ctx.drawImage(img, xn2 - 45, yn2 + 20, 40, 70);
        }*@
        
    }

    window.addEventListener('load', ajustarCanvas);
    window.addEventListener('resize', ajustarCanvas);
</script>


<script id="_dibujar_molecula">
    function dibujarMolecula(xn2, yn2) {
        const radio = 7;
        const grosor = 5;
        ctx.fillStyle = 'rgb(64, 150, 84)';
       

        ctx.beginPath();
        ctx.arc(xn2, yn2 + 45, radio+1, 0, Math.PI * 2); // 1
        ctx.fill();

        ctx.beginPath();
        ctx.arc(xn2 - 5, yn2 + 70, radio+2, 0, Math.PI * 2); // 2
        ctx.fill();

        ctx.beginPath();
        ctx.arc(xn2-15, yn2 + 100, radio, 0, Math.PI * 2); //3
        ctx.fill();


        ctx.beginPath();
        ctx.arc(xn2 + 30, yn2 + 15, radio + 1, 0, Math.PI * 2); // 4
        ctx.fill();

        ctx.beginPath();
        ctx.arc(xn2 + 30, yn2 + 45, radio + 1, 0, Math.PI * 2); // 5
        ctx.fill();

        ctx.beginPath();
        ctx.arc(xn2 + 25, yn2 + 70, radio+1, 0, Math.PI * 2); // 6
        ctx.fill();


        ctx.strokeStyle = 'rgb(64, 150, 84)';
        ctx.lineWidth = grosor;
        ctx.beginPath();

        ctx.moveTo(xn2, yn2 + 45); 
        ctx.lineTo(xn2-5, yn2 + 70);

        ctx.moveTo(xn2-5, yn2 + 70);
        ctx.lineTo(xn2 - 15, yn2 + 100);        

        ctx.moveTo(xn2 + 30, yn2 + 15);
        ctx.lineTo(xn2 + 30, yn2 + 45);

        ctx.moveTo(xn2 + 30, yn2 + 45); 
        ctx.lineTo(xn2 + 25, yn2 + 70);
       
        ctx.moveTo(xn2, yn2 + 45); 
        ctx.lineTo(xn2 + 30, yn2 + 45);

        ctx.moveTo(xn2 - 5, yn2 + 70); 
        ctx.lineTo(xn2 + 25, yn2 + 70);


        ctx.stroke();
    }
    
</script>


